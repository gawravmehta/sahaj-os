# --- Environment ---
ENVIRONMENT=dev
SERVICE_NAME=backend-customer-portal

# --- Service URLs ---
CUSTOMER_PORTAL_FRONTEND_URL=https://customer-portal.example.com
CMP_ADMIN_BACKEND_URL=http://backend-cmp-admin:3330

# --- Postgres ---
POSTGRES_DATABASE_URL=postgresql://user:pass@localhost:5432/dbname

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass
REDIS_USERNAME=default
REDIS_MAX_CONNECTIONS=200
REDIS_MAX_CONNECTIONS_PER_NODE=50

# --- Mongo ---
MONGO_URI=mongodb://user:pass@localhost:27017
DB_NAME_CONCUR_MASTER=concur_master
DB_NAME_CONCUR_LOGS=concur_logs

# --- Auth / Security ---
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=1440
OTP_EXPIRY_SECONDS=300

# --- S3 / MinIO ---
S3_URL=http://127.0.0.1:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_SECURE=False

CUSTOMER_PORTAL_BUCKET=customer-portal
KYC_DOCUMENTS_BUCKET=kyc-documents

# --- RabbitMQ ---
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST_NAME=/
RABBITMQ_POOL_SIZE=5
