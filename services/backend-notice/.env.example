# --- Environment ---
ENVIRONMENT=dev
SERVICE_NAME=backend-notice

# --- Security ---
SECRET_KEY=your-secret-key-here
NOTICE_ACCESS_TOKEN_EXPIRE_HOURS=1

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass
REDIS_USERNAME=default
REDIS_MAX_CONNECTIONS=200
REDIS_MAX_CONNECTIONS_PER_NODE=50

# --- Mongo ---
MONGO_URI=mongodb://user:pass@localhost:27017
DB_NAME_CONCUR_MASTER=concur_master_test

# --- Postgres ---
POSTGRES_DATABASE_URL=postgresql://user:pass@localhost:5432/dbname

# --- S3 / MinIO ---
S3_URL=http://127.0.0.1:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
NOTICE_WORKER_BUCKET=notice-worker-dev
S3_SECURE=False

# --- SMS ---
SMS_SENDER_ID=CONCUR

# --- RabbitMQ ---
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
